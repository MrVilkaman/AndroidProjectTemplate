<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Parent">
        <item name="android:id">@id/parent</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/cleanbase_app_background</item>
    </style>


    <style name="LL">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LL.H">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="LL.V">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Aggregator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RestoreFocus">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">0px</item>
    </style>

    <style name="LineDiv">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cleanbase_divider_color</item>
    </style>

    <style name="LineDivV">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/cleanbase_divider_color</item>
    </style>



    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorButtonNormal">@color/colorPrimary</item>-->
        <item name="android:textColor">@color/cleanbase_main_text_color</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/cleanbase_toolbar_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>


    <!--PhotoCrop-->
    <style name="PhotoCropButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">162dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
    </style>


</resources>